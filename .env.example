# =============================================================================
# GOOGLE APIs
# =============================================================================
# Google Earth Engine (for Sentinel-2 satellite imagery)
GOOGLE_EE_PROJECT_ID=your-earth-engine-project-id
GOOGLE_EE_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_EE_PRIVATE_KEY_PATH=/path/to/your-private-key.json

# Google Gemini 2.5 Flash (NanoBanana - image editing)
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# LLM APIs
# =============================================================================
# Groq (Llama 3.1 70B, Mixtral 8x7B)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# LangSmith (Agent tracing & monitoring)
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=urban-evolution-ai
LANGSMITH_TRACING=true

# =============================================================================
# DATABASE
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite:///./urban_evolution.db

# Production (PostgreSQL on Railway)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Caching & Task Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
API_SECRET_KEY=your-secret-key-here-use-openssl-to-generate
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_PERIOD=60

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Railway
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_ENVIRONMENT=production

# Modal (GPU inference)
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# Vercel (Frontend)
VERCEL_TOKEN=your-vercel-token
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (Error tracking - optional)
# SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# COST TRACKING & LIMITS
# =============================================================================
# Daily cost limits (USD)
MAX_GEMINI_COST_PER_DAY=10.0
MAX_GROQ_COST_PER_DAY=5.0
MAX_TOTAL_API_COST_PER_DAY=20.0

# Alert thresholds
COST_ALERT_THRESHOLD_PERCENTAGE=80
ALERT_EMAIL=your-email@example.com

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
# YOLOv11
YOLO_MODEL_PATH=models/yolo/best.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.4

# SAM
SAM_MODEL_PATH=models/sam/sam_vit_h.pth
SAM_MODEL_TYPE=vit_h

# LSTM Growth Prediction
LSTM_MODEL_PATH=models/growth/lstm_spatial.h5
LSTM_SEQUENCE_LENGTH=3

# XGBoost Building Classification
XGBOOST_MODEL_PATH=models/growth/xgboost_building_type.pkl

# =============================================================================
# DATA CONFIGURATION
# =============================================================================
# Tile configuration
TILE_SIZE_KM=2.0
TILE_ZOOM_LEVEL=14
TILE_OVERLAP_METERS=100

# Data directories
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_MANIFESTS_DIR=data/manifests
OUTPUTS_DIR=outputs

# =============================================================================
# ETHICS & SAFETY
# =============================================================================
# Bias detection thresholds
ETHICS_MIN_SCORE=0.7
ETHICS_REQUIRE_HUMAN_APPROVAL=true
ETHICS_ENABLE_AUDIT_LOGGING=true

# Environmental impact
ENABLE_CARBON_TRACKING=true
MAX_CARBON_FOOTPRINT_KG=100

# =============================================================================
# CELERY (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/urban_evolution.log

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
RELOAD=false
WORKERS=4
